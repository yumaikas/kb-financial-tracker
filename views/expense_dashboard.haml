%h2 
  Current Budget
  - d_now = DateTime.now
  - days_left = Date.civil(d_now.year, d_now.month, -1).day - d_now.day

%table
  %thead
    %th
      Category
    %th
      Budget
    %th
      Flow
    %th
      Remaning
    %th
      Daily Spend allowed
  %tbody
  - @budgets.each do |k, budget|
    %tr
      %td
        = budget[:name]
      %td
        = budget[:budget].to_s('F')
      %td
        = budget[:expenses].to_s('F')
      %td
        = (budget[:budget] - budget[:expenses]).to_s('F')
      %td
        = "%.2f" % ((budget[:budget] - budget[:expenses]) / days_left)
         


%h3
  = "Days left in month: #{days_left}" 